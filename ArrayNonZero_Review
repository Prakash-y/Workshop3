package Review12;

import java.util.Arrays;

public class Array2 {

	public static void main(String[] args) {
		int arr [] = {1,2,5,0,7,0,10};
		int count = 0;
		for(int i =0; i<arr.length; i++)
		{
			if(arr[i]!=0)
			{
				arr[count] = arr[i];
				count++;
			}
		}
		while(count<arr.length)
		{
			arr[count] =0;
			count++;
		}
		System.out.println(Arrays.toString(arr));
	}
}
